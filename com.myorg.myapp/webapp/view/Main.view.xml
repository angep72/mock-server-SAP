<mvc:View
    controllerName="com.myorg.myapp.controller.Main"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    core:require="{
		formatter: 'com/myorg/myapp/model/formatter'
	}"
>
    <Page
        title="{i18n>appTitle}"
        id="page"
    >
        <content>
            <Table
                id="suppliers"
                items="{/users}"
            >
                <headerToolbar>
                    <Toolbar>
                        <Title text="{i18n>suppliersTitle}" />
                        <ToolbarSpacer />
                        <SearchField
                            placeholder="{i18n>searchPlaceholder}"
                            search="onSearch"
                            width="30%"
                        />
                        <Button
                            icon="sap-icon://add"
                            press="onAdd"
                            text="{i18n>addButtonText}"
                        />
                        <Button
                            icon="sap-icon://sort"
                            press="onSort"
                            text="{i18n>sortButtonText}"
                        />
                    </Toolbar>
                </headerToolbar>

                <columns>
                    <Column>
                        <Text text="{i18n>supplierID}" />
                    </Column>
                    <Column>
                        <Text text="{i18n>UsersName}" />
                    </Column>
                    <Column>
                        <Text text="{i18n>UsersEmail}" />
                    </Column>
                    <Column>
                        <Text text="{i18n>usersaddress}" />
                    </Column>
                    <Column>
                        <Text text="{i18n>usersCity}" />
                    </Column>
                    <Column>
                        <Text text="{i18n>actionsicon}" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{id}" />
                            <Text text="{name}" />
                            <Text text="{email}" />
                            <Text text="{address/street}" />
                            <Text text="{address/city}" />
                            <HBox>
                                <Button
                                    icon="sap-icon://edit"
                                    press="onEdit"
                                    type="Transparent"
                                />
                                <Button
                                    icon="sap-icon://delete"
                                    press="onDelete"
                                    type="Transparent"
                                />
                            </HBox>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
        <Dialog
            id="creating-dialog"
            title="{i18n>creatingDialogTitle}"
            class="sapUiContentPadding"
        >
            <VBox>
                <Label text="{i18n>creatingidlabel}" />
                <Input
                    id="creating-id"
                    type="Number"
                    valueStateText="{i18n>creatingidvalueStateText}"
                    change="validateInputId"
                />
                <Label text="{i18n>creatingnamelabel}" />
                <Input
                    id="creating-name"
                    valueStateText="{i18n>creatingnamevalueStateText}"
                    change="validateInputName"
                />
                <Label text="{i18n>creatingemaillabel}" />
                <Input
                    id="creating-email"
                    valueStateText="{i18n>creatingemailvalueStateText}"
                    change="validateInputEmail"
                />
                <Label text="{i18n>creatingaddresslabel}" />
                <Input
                    id="creating-address"
                    valueStateText="{i18n>creatingaddressvalueStateText}"
                    change="validateInputAddress"
                />
                <Label text="{i18n>creatingcitylabel}" />
                <Input
                    id="creating-city"
                    valueStateText="{i18n>creatingcityvalueStateText}"
                    change="validateInputCity"
                />
            </VBox>
        </Dialog>
    </Page>
</mvc:View>
