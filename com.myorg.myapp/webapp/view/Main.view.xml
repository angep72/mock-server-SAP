<mvc:View
    controllerName="com.myorg.myapp.controller.Main"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    core:require="{
		formatter: 'com/myorg/myapp/model/formatter'
	}"
>
    <Page
        title="{i18n>appTitle}"
        id="page"
    >
        <content>
            <Table
                id="suppliers"
                items="{/users}"
            >
                <headerToolbar>
                    <Toolbar>
                        <Title text="{i18n>suppliersTitle}" />
                        <ToolbarSpacer />
                        <SearchField
                            id="searchField"
                            width="30%"
                            liveChange="onSearch"
                            placeholder="Search..."
                        />
                        <Button
                            icon="sap-icon://add"
                            press="onAdd"
                            text="{i18n>addButtonText}"
                        />
                        <Button
                            icon="sap-icon://sort"
                            press="onSort"
                            text="{i18n>sortButtonText}"
                        />
                    </Toolbar>
                </headerToolbar>

                <columns>
                    <Column>
                        <Text text="Users ID" />
                    </Column>
                    <Column>
                        <Text text="UserName" />
                    </Column>
                    <Column>
                        <Text text="Email" />
                    </Column>
                    <Column>
                        <Text text="City" />
                    </Column>
                    <Column>
                        <Text text="Occupation" />
                    </Column>
                     <Column>
                        <Text text="{i18n>actionsicon}" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{id}" />
                            <Text text="{firstName}" />
                            <Text text="{email}" />
                            <Text text="{city}" />
                            <Text text="{occupation}" />
                            <HBox>
                            <Button
                                icon="sap-icon://edit"
                                press="onEdit"
                            />
                            <Button
                                icon="sap-icon://delete"
                                press="onDelete"
                            /></HBox>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
        <Dialog
            id="creating-dialog"
            title="{i18n>creatingDialogTitle}"
            class="sapUiContentPadding"
        >
            <VBox>
            <Label text="UserID" />
                <Input
                    id="creating-id"
                    type="Number"
                    valueStateText="{i18n>creatingDialogIdValueStateText}"
                    change="validateInputId"
                />
                <Label text="Name" />
                <Input
                    id="creating-name"
                    valueStateText="{i18n>creatingDialogNameValueStateText}"
                    change="validateInputName"
                />
                <Label text="User email" />
                <Input
                    id="creating-email"
                    valueStateText="{i18n>creatingDialogEmailValueStateText}"
                    change="validateInputEmail"
                />
                <Label text="City" />
                <Input
                    id="creating-City"
                    valueStateText="{i18n>creatingDialogAddressValueStateText}"
                    change="validateInputAddress"
                />
                <Label text="Occupation" />
                <Input
                    id="creating-occupation"
                    valueStateText="{i18n>creatingDialogCityValueStateText}"
                    change="validateInputCity"
                />
               </VBox>
            <beginButton>
                <Button
                    text="{i18n>creatingDialogSaveButtonText}"
                    press="onSaveNewUser"
                />
            </beginButton>
            <endButton>
                <Button
                    text="{i18n>creatingDialogCancelButtonText}"
                    press="onCancelNewUser"
                />
            </endButton>
        </Dialog>
        <Dialog
            id="updatingDialog"
            title="{i18n>updatingDialogTitle}"
            class="sapUiContentPadding"
        >
            <VBox>
                <Label text="{i18n>updatingDialogIdLabel}" />
                <Input
                    id="updating-id"
                    type="Number"
                    valueStateText="{i18n>updatingDialogIdValueStateText}"
                    change="validateInputId"
                />
                <Label text="{i18n>updatingDialogNameLabel}" />
                <Input
                    id="updating-name"
                    valueStateText="{i18n>updatingDialogNameValueStateText}"
                    change="validateInputName"
                />
                <Label text="{i18n>updatingDialogEmailLabel}" />
                <Input
                    id="updating-email"
                    valueStateText="{i18n>updatingDialogEmailValueStateText}"
                    change="validateInputEmail"
                />
                <Label text="{i18n>updatingDialogAddressLabel}" />
                <Input
                    id="updating-address"
                    valueStateText="{i18n>updatingDialogAddressValueStateText}"
                    change="validateInputAddress"
                />
                <Label text="{i18n>updatingDialogCityLabel}" />
                <Input
                    id="updating-city"
                    valueStateText="{i18n>updatingDialogCityValueStateText}"
                    change="validateInputCity"
                />
            </VBox>
            <beginButton>
                <Button
                    text="{i18n>updatingDialogSaveButtonText}"
                    press="onSaveUpdatedUser"
                />
            </beginButton>
            <endButton>
                <Button
                    text="{i18n>updatingDialogCancelButtonText}"
                    press="onCancelUpdatedUser"
                />
            </endButton>
        </Dialog>
    </Page>
</mvc:View>
