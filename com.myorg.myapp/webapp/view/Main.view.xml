<mvc:View
    controllerName="com.myorg.myapp.controller.Main"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    core:require="{
		formatter: 'com/myorg/myapp/model/formatter'
	}"
>
    <Page
        title="{i18n>appTitle}"
        id="page"
    >
        <content>
		<Table id="suppliers">
		<headerToolbar>
		<Toolbar>
		<Title text="{i18n>suppliersTitle}"/>
		<ToolbarSpacer />
		<SearchField
			placeholder="{i18n>searchPlaceholder}"
			search="onSearch"
			width="30%"/>
			<Button
				icon="sap-icon://add"
				press="onAdd"
				text="{i18n>addButtonText}"/>
				<Button
					icon="sap-icon://sort"
					press="onSort"
					text="{i18n>sortButtonText}"/>
		</Toolbar>
		</headerToolbar>

		<columns>
		<Column >
		<Text text="{i18n>supplierID}" />
		</Column>
		<Column>
		<Text text="{i18n>UsersName}"/>
		</Column>
		</columns>
		</Table>
		</content>
    </Page>
</mvc:View>
